<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/NoteListFragment">

    <fragment
        android:id="@+id/NoteListFragment"
        android:name="com.bodrulamin.noteapp_room.NoteListFragment"
        android:label="@string/notelist_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_NoteListFragment_to_AddNote"
            app:destination="@id/AddNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddNoteFragment"
        android:name="com.bodrulamin.noteapp_room.SecondFragment"
        android:label="@string/addnote_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/NoteListFragment" />
    </fragment>
</navigation>